<div class="row">
  <div class="col-md-3 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading"><h2>Sign Up</h2></div>  
      <div class="panel-body">
    <%= link_to "Sign Up with Google", user_omniauth_authorize_path(:google_oauth2), class: "btn btn-primary" %>
    <%= link_to "Sign Up with Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-primary" %>   
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      </br>
       <%= f.input :fullname, :class => 'form-control', :placeholder => 'Full Name', autofocus: true %>
       <%= f.input :email, :class => 'form-control', :placeholder => 'Email',required: true %>
       <%= f.input :date_of_birth, as: :date, start_year: 1920,
                              end_year: Date.today.year - 18,
                              order: [:day, :month, :year], required: true, error: 'Must be 18 yrs old' %>
       <% if @validatable %>
       <em>(<%= @minimum_password_length %> characters minimum)</em>
       <% end %>
       <%= f.input :password, :class => 'form-control', :placeholder => 'Password',required: true,  autocomplete: "off" %>
      <p> By signing up, I agree to Team Sonnyâ€™s Terms of Service, Payments Terms of Service,Privacy Policy, Guest Refund Policy and Host Guarantee Terms.</p>

      <div class="actions">
        <%= f.submit "Sign up", :class => "btn btn-primary" %>
      </div>
    <% end %>
</div>
</div>
  </div>
</div>
</div>
</div>